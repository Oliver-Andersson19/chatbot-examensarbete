-- Drop the chatbots table if it exists
DROP TABLE IF EXISTS chatbots;

-- Drop the colorScheme table if it exists
DROP TABLE IF EXISTS colorScheme;

CREATE TABLE colorScheme (
    id INT PRIMARY KEY AUTO_INCREMENT,
    primaryColor VARCHAR(255),
    secondaryColor VARCHAR(255),
    accentColor VARCHAR(255)
);

CREATE TABLE chatbots (
    id INT PRIMARY KEY AUTO_INCREMENT,
    colorSchemeId INT,
    FOREIGN KEY (colorSchemeId) REFERENCES colorScheme(id)
);

INSERT INTO colorScheme (primaryColor, secondaryColor, accentColor) VALUES ('#1636A9', '#3A8CD9', '#E8F2FF');
INSERT INTO colorScheme (primaryColor, secondaryColor, accentColor) VALUES ('#292929', '#3A8CD9', '#E8F2FF');

-- Assume colorSchemeId is the retrieved id from the above query
INSERT INTO chatbots (id, colorSchemeId) VALUES (123, 2);